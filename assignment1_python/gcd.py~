#!/bin/python
def gcd(x,y):
    def calculate_gcd(x,y):
        while y:
            x,y=y,x%y
            return x
    while True:
        try:
            print "Validating x" 
            int(x)
            print "x is valid"
        except ValueError:
            print "Invalid value of x"
            break
        try:
            print "Validating y"
            int(y)
            print "y is valid"
        except ValueError:
            print "Invalid value of y"
            break
        finally:
            print "Let's calculate gcd"
            print "gcd is",calculate_gcd(x,y)
            break
 



